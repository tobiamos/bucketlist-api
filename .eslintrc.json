{
  "extends": "airbnb-base",
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "rules": {
    "linebreak-style": 0,
    "no-underscore-dangle": ["error", {
      "allow": ["_id"]
    }],
    "import/no-extraneous-dependencies": ["error", {
      "devDependencies": true
    }],
    "max-len": ["error", {
      "code": 120,
      "tabWidth": 2
    }],
    "prefer-destructuring": 0,
    "consistent-return": 0,
    "no-use-before-define": 0,
    "no-unused-expressions": 0
  }
}